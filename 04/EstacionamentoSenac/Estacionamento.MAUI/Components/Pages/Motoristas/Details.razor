@page "/motoristas/details/{Id:int}"
@using Estacionamento.MAUI.Models
@inject HttpClient Http;


<h3>Details do Motorista</h3>

@if(motorista == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <div>
        <h4>Motorista</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nome
            </dt>
            <dd>
                @motorista.Nome
            </dd>
            <dt class="col-sm-2">
                VeiculoId
            </dt>
            <dd class="">
                @motorista.VeiculoId
            </dd>
        </dl>
    </div>     
    <div>
        <a href="/motoristas" class="btn btn-light">Voltar</a>
    </div>
})

@code {
     [Parameter]
    public int Id { get; set; }
    private Motorista? motorista;

    protected override async Task OnInitializedAsync()
    {
        // Busca um veículo na API
        motorista = await Http.GetFromJsonAsync<Motorista>($"https://localhost:4000/api/Veiculos/{Id}");
    }
}
